@model accounts.Models.DisplayAccounts

@{
    ViewBag.Title = "Delete";
    if (Session["Name"] == null)
    {
        Response.Redirect("~/Users/Login", false);
    }
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Accounts</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Account Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account_name)
        </dd>

        <dt>
            @Html.DisplayName("Account Number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account_number)
        </dd>

        <dt>
            @Html.DisplayName("Main Account")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FatherName)
        </dd>

        <dt>
            @Html.DisplayName("Account Currencies")
        </dt>

        <dd>
            @foreach (var item2 in Model.currncies)
            {
                <p>@item2.Name <span>(@item2.symbol)</span></p>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
